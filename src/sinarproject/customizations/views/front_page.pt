<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="sinarproject.customizations"
      metal:use-macro="context/main_template/macros/master">
<body>

  <metal:custom_title fill-slot="content-title">
  </metal:custom_title>

  <metal:custom_description fill-slot="content-description">
    <p tal:replace="structure context/@@description" />
  </metal:custom_description>

  <metal:content-core fill-slot="content-core">
  <metal:block define-macro="content-core">

  <div class="container">
      <div class="row">
          <div class="col-md-5 bg-light p-5">
            <p class="lead">We are a civic tech initiative using open
            technology, open data and policy analysis to systematically
            make important information public and more accessible, in
            constrained environments.</p>
            <a class="btn btn-dark btn-md" href="/projects" role="button"
               tal:attributes="href string:${portal_url}/projects">
            Browse our Projects</a>

          </div>
          <div class="col-md-7">
            <img class="rounded img-fluid"
             tal:attributes="src string:${portal_url}/media/dsc04920.jpg/@@images/image-768-1220175e2120173499d7a45843f21c54.jpeg"
            />
          </div>
      </div>
  </div>

  <br />
  <h4 tal:condition="view/events">Upcoming Events</h4>
  <div class="row row-cols-1 row-cols-md-3 g-3" id="event-cards">
      <div class="col" tal:repeat="item view/events">
          <div class="card h-100">
           <a class="stretched-link" href="" tal:attributes="href item/getURL ">
           <img tal:condition="python: item.getObject().image"
                tal:define="image_url python: item.getObject().absolute_url"
                tal:attributes="src string: ${image_url}/@@images/image/large"
                src="..." class="card-img-top rounded-top" />
           </a>
            <div class="card-body">
                    <strong tal:content="item/Title | nothing">
                        <br />
                    <small class="text-body-secondary"
                        tal:content="python: plone_view.toLocalizedTime(item.start, long_format=1) ">
                    </small><span talcondition="item/location">
                        <br /></span><small
                        class="text-body-secondary"
                    tal:content="item/location|nothing"></small>

            </div>
        </div>
      </div>
  </div>

  <br />
  <h4>Updates</h4>
    <div class="row row-cols-1 row-cols-md-3 g-4" id="update-cards">
      <div class="col" tal:repeat="item view/updates">
        <div class="card h-100" >
           <a class="stretched-link" href="" tal:attributes="href item/getURL ">
           <img tal:condition="python: item.getObject().image"
                tal:define="image_url python: item.getObject().absolute_url"
                tal:attributes="src string: ${image_url}/@@images/image/large"
                src="..." class="card-img-top rounded-top" />
           </a>
            <div class="card-body">
              <h5 class="card-title" tal:content="item/Title|nothing">Card title</h5>
            </div>
        </div>
      </div>
    </div>



  </metal:block>
  </metal:content-core>
</body>
</html>
